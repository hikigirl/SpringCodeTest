<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- src/main/resources -> config -> address.xml -->
<!-- XML Mapper -->
<mapper namespace="code">
	<!-- mybatis 단위테스트용 쿼리 -->
	<select id="count" resultType="Integer">select count(*) from tblAddress</select>
	
	<!-- 카테고리 + select -->
	<select id="llist" resultType="ldto">
		select * from tblLanguage
	</select>
	
	<!-- 코드 게시판 + 글쓰기(insert) -->
	<insert id="add" parameterType="cdto">
		insert into tblCode (seq, subject, code, regdate, language)
			values (seqCode.nextVal, #{subject}, #{code}, default, #{language})
	</insert>
	
	<!-- 코드 게시판 + 목록 보기 -->
	<resultMap type="cdto" id="codeMap">
		<id column="seq" property="seq"/>
		<result column="subject" property="subject" />
		<result column="code" property="code" />
		<result column="regdate" property="regdate" />
		<result column="language" property="language" />
		<association property="ldto" resultMap="languageMap"></association>
	</resultMap>
	
	<resultMap type="ldto" id="languageMap">
		<id column="name" property="name" />
		<result column="icon" property="icon" />
		<result column="color" property="color" />
	</resultMap>
	
	<select id="list" resultMap="codeMap">
		<!-- select * from tblCode order by seq desc -->
		select * from tblCode c
		    inner join tblLanguage l
		        on c.language = l.name
		    order by seq desc
	</select>
	
	<!-- 코드 게시판 + 상세보기 -->
	<select id="get" parameterType="String" resultType="cdto">
		select * from tblCode
			where seq = #{seq} 
		order by seq desc
	</select>
	
</mapper>